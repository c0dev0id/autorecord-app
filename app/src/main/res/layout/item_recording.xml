<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:stateListAnimator="@animator/card_elevation"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:contentDescription="Time"
                android:layout_marginEnd="8dp"
                app:tint="#757575" />

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 25, 2026 14:30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

        </LinearLayout>

        <!-- Location Coordinates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:contentDescription="Location"
                android:layout_marginEnd="8dp"
                app:tint="#757575" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="47.123456, 8.654321"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Transcription Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Transcription Label and TextInputLayout with Save Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcription:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/transcriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="transcribed text goes here... field can be changed!"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveTranscriptionButton"
                    style="@style/AppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="13sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="#757575"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteButton"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/downloadButton"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Download"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"
                    app:backgroundTint="#424242"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/transcribeButton"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transcode"
                    android:textSize="13sp"
                    android:drawableEnd="@drawable/ic_status_not_started"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="#424242"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openMapsButton"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Open Maps"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playButton"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Play"
                    android:textSize="13sp"
                    app:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Icon - visible indicator for transcription status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/v2sStatusIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Transcription Status"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
