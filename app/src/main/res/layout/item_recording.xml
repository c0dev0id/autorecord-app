<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:contentDescription="Time"
                android:layout_marginEnd="8dp"
                android:tint="#757575" />

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 25, 2026 14:30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <ImageView
                android:id="@+id/playIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play recording"
                android:padding="4dp"
                android:tint="#1976D2" />

        </LinearLayout>

        <!-- Location Coordinates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:contentDescription="Location"
                android:layout_marginEnd="8dp"
                android:tint="#757575" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="47.123456, 8.654321"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Transcription Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speech-to-Text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/transcriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No transcription yet"
                android:textSize="14sp"
                android:textColor="#757575"
                android:fontStyle="italic"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp" />

            <!-- Button with Status Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/transcribeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Transcribe"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/v2sStatusIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Transcription Status"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/v2sProgressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- OSM Note Section -->
        <LinearLayout
            android:id="@+id/osmSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OSM Note"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <!-- Button with Status Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/createOsmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Create Note"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:backgroundTint="#7CB342"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/osmStatusIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="OSM Status"
                    android:layout_marginStart="8dp" />

                <ProgressBar
                    android:id="@+id/osmProgressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/downloadButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Export"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#616161" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="12sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#D32F2F" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
