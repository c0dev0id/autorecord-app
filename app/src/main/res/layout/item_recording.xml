<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:stateListAnimator="@animator/card_elevation"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:contentDescription="Time"
                android:layout_marginEnd="8dp"
                app:tint="@color/icon_tint" />

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 25, 2026 14:30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Location Coordinates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:contentDescription="Location"
                android:layout_marginEnd="8dp"
                app:tint="@color/icon_tint" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="47.123456, 8.654321"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="12dp" />

        <!-- Transcription Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Transcription Label and TextInputLayout with Save Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcription:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/input_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/transcriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/transcription_hint"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveTranscriptionButton"
                    style="@style/AppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textSize="13sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="#757575"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Delete button on the left -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteButton"
                    style="@style/AppButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textSize="13sp"
                    app:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF" />

                <!-- Spacer to push remaining buttons to the right -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Right-aligned buttons in a HorizontalScrollView -->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/downloadButton"
                            style="@style/AppButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/download"
                            android:textSize="13sp"
                            android:layout_marginEnd="8dp"
                            android:visibility="visible"
                            app:backgroundTint="#424242"
                            android:textColor="#FFFFFF" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/transcribeButton"
                            style="@style/AppButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transcode"
                            android:textSize="13sp"
                            android:drawableEnd="@drawable/ic_status_not_started"
                            android:drawablePadding="4dp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#424242"
                            android:textColor="#FFFFFF" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/openMapsButton"
                            style="@style/AppButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/open_maps"
                            android:textSize="13sp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#4CAF50"
                            android:textColor="#FFFFFF" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playButton"
                            style="@style/AppButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/play"
                            android:textSize="13sp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#1976D2"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
